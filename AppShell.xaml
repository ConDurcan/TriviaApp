<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TriviaGameProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TriviaGameProject"
    Shell.FlyoutBehavior="Disabled"
    Title="TriviaGameProject">

    <ShellContent
        
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Title =" ScoreScreen " ContentTemplate ="{ DataTemplate local:ScoreScreen }" 
                  Route =" scorescreen " />

    <ShellContent Title="PlayerInfoScreen" ContentTemplate="{DataTemplate local:PlayerInfoScreen}"
                  Route="playerinfoscreen"/>

    <ShellContent Title="Options" ContentTemplate="{DataTemplate local:Options}"
                  Route="options"/>

    <ShellContent Title="SPGameScreen" ContentTemplate="{DataTemplate local:SPGameScreen}"
                  Route="spgamescreen"/>

    <ShellContent Title="MPGameScreen" ContentTemplate="{DataTemplate local:MPGameScreen}"
                  Route="mpgamescreen"/>

</Shell>
